---
import type { CollectionEntry } from 'astro:content';

interface Props {
  business: CollectionEntry<'businesses'>;
}

const { business } = Astro.props;
const { name, category, location, phone, description, image, website, googleMapsUrl } = business.data;

// Determine primary CTA
const primaryLink = website || googleMapsUrl || '';
const primaryLinkText = website ? 'Visit Website' : 'View on Maps';

// Format phone for tel: link
const phoneLink = phone?.replace(/\D/g, '');
---

<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
  <div class="md:flex">
    <!-- Image -->
    <div class="md:w-1/3 bg-gray-200 flex-shrink-0">
      {image ? (
        <img
          src={image}
          alt={name}
          class="w-full h-48 md:h-full object-cover"
          loading="lazy"
        />
      ) : (
        <img
          src="/images/placeholder-business.svg"
          alt={name}
          class="w-full h-48 md:h-full object-cover"
        />
      )}
    </div>

    <!-- Content -->
    <div class="p-6 md:w-2/3 flex flex-col">
      <!-- Header -->
      <div class="mb-3">
        <div class="flex items-start justify-between gap-3 mb-2">
          <h2 class="text-xl font-bold text-gray-900">
            {name}
          </h2>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 whitespace-nowrap">
            {category}
          </span>
        </div>

        <!-- Location -->
        <p class="text-gray-600 text-sm flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          {location}
        </p>

        {/* Phone */}
        {phone && (
          <p class="text-gray-600 text-sm flex items-center mt-1">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href={`tel:${phoneLink}`} class="hover:text-blue-600">
              {phone}
            </a>
          </p>
        )}
      </div>

      <!-- Description -->
      <p class="text-gray-700 text-sm mb-4 flex-grow">
        {description}
      </p>

      <!-- CTA Button -->
      <div class="mt-auto">
        <a
          href={primaryLink}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors"
        >
          {primaryLinkText}
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</article>
