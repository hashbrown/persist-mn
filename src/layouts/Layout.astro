---
import '../styles/global.css';
import { CONTENT } from '../utils/content';

interface Props {
  title: string;
  justification?: string;
}

const { title, justification = CONTENT.site.defaultJustification } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="justification" content={justification} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="min-h-screen flex flex-col">
      <slot />
      <footer class="mt-auto bg-gray-800 text-white py-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <p class="text-center text-gray-300">
            {CONTENT.footer.copyrightTemplate(new Date().getFullYear())}
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>
